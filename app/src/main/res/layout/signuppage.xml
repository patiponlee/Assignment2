<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".signup">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/egco" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Username"
        android:id="@+id/username"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="#43a1f9"
        android:background="#e1e0e0"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditName"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Password"
        android:id="@+id/password"
        android:background="#e1e0e0"
        android:textColor="#43a1f9"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/EditName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/EditPass"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Latitude"
        android:id="@+id/latitude"
        android:layout_below="@+id/EditPass"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="#e1e0e0"
        android:textColor="#43a1f9"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Longitude"
        android:id="@+id/longitude"
        android:background="#e1e0e0"
        android:textColor="#43a1f9"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_alignTop="@+id/latitude"
        android:layout_alignParentEnd="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/EditLati"
        android:layout_below="@+id/latitude"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/EditLongi"
        android:layout_below="@+id/longitude"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random by Clicking"
        android:id="@+id/randomBtn"
        android:layout_below="@+id/EditLati"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="random"
        android:background="#43a1f9"
        android:textColor="#e1e0e0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New User"
        android:id="@+id/addBtn"
        android:layout_below="@+id/randomBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="pressAdd"
        android:textColor="#e1e0e0"
        android:background="#43a1f9"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
